<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="139dp"
        android:layout_height="0dp"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="357dp"
        android:gravity="center"
        android:text="Time : 10"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@+id/baslaButton"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/skorTextView"
        android:layout_width="139dp"
        android:layout_height="0dp"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="357dp"
        android:gravity="center"
        android:text="Skor : 0"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@+id/baslaButton"
        app:layout_constraintHorizontal_bias="0.797"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="301dp"
        android:layout_height="302dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skorTextView">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="0"
            app:layout_row="2"
            android:onClick="arttir"
            app:srcCompat="@drawable/jerry" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="1"
            app:layout_row="2"
            android:onClick="arttir"
            app:srcCompat="@drawable/jerry" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="0"
            app:layout_row="1"
            android:onClick="arttir"
            app:srcCompat="@drawable/jerry" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="2"
            app:layout_row="1"
            android:onClick="arttir"
            app:srcCompat="@drawable/jerry" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="1"
            app:layout_row="1"
            android:onClick="arttir"
            app:srcCompat="@drawable/jerry" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="2"
            app:layout_row="0"
            android:onClick="arttir"
            app:srcCompat="@drawable/jerry" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="1"
            android:onClick="arttir"
            app:layout_row="0"
            app:srcCompat="@drawable/jerry" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="arttir"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/jerry" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="arttir"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/jerry" />
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/baslaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="79dp"
        android:onClick="basla"
        android:text="Basla"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skorTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>